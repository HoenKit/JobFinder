@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}


@{
    <div style="font-family: 'Roboto', sans-serif; display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; text-align: center; margin: 0;">
        <p style="font-size: 20px; color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            Check your email to confirm your account.
        </p>
        <p style="font-size: 15px; color: #95a5a6; line-height: 1.6; max-width: 400px;">
            After confirming your account, you'll be able to log in and enjoy all the features we offer.
        </p>
    </div>

}

