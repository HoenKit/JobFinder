@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<h1>@ViewData["Title"]</h1>
<div style="font-family: Arial, sans-serif; text-align: center; margin-top: 50px;">
    <h1 style="color: #2c3e50;">@ViewData["Title"]</h1>
    <p style="font-size: 18px; color: #34495e;">
        Your password has been successfully reset.
    </p>

    <p style="font-size: 16px; color: #7f8c8d; margin-top: 20px;">
        You can now log in with your new password.
    </p>

    <a asp-page="./Login"
       style="display: inline-block; margin-top: 30px; padding: 10px 20px; background-color: #3498db; color: #ffffff;
              text-decoration: none; border-radius: 5px; font-size: 16px;">
        Log in
    </a>
</div>
