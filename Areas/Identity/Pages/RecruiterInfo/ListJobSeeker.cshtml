@page "{jobPostingId:int}"
@model JobFinder.Areas.Identity.Pages.RecruiterInfo.ListJobSeekerModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/assets/css/Recruiter.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">List Applicants</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="align-middle text-center">Full Name</th>
                                    <th class="align-middle text-center">Email</th>
                                    <th class="align-middle text-center">Education Level</th>
                                    <th class="align-middle text-center">Specialized</th>
                                    <th class="align-middle text-center">Experience</th>
                                    <th class="align-middle text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Applications.Any())
                                {
                                    foreach (var application in Model.Applications)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@application.JobSeeker.FirstName @application.JobSeeker.LastName</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@application.JobSeeker.User.Email</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@application.JobSeeker.EducationLevel</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@application.JobSeeker.Specialized</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@application.JobSeeker.Experience</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <a asp-page="/RecruiterInfo/ApplicantDetail" asp-route-applicationId="@application.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="View Details">
                                                    Detail
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No job seekers have applied for this job.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>