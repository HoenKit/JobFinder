@page
@model JobFinder.Areas.Identity.Pages.RecruiterInfo.PostDetailModel


<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] - JobFinder</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="assets/css/flaticon.css">
    <link rel="stylesheet" href="assets/css/slicknav.css">
    <link rel="stylesheet" href="assets/css/price_rangs.css">
    <link rel="stylesheet" href="assets/css/animate.min.css">
    <link rel="stylesheet" href="assets/css/magnific-popup.css">
    <link rel="stylesheet" href="assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="assets/css/themify-icons.css">
    <link rel="stylesheet" href="assets/css/slick.css">
    <link rel="stylesheet" href="assets/css/nice-select.css">
    <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
    <main>

        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="assets/img/hero/about.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Job Information</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End -->
        <!-- job post company Start -->
        <div class="job-post-company pt-120 pb-120">
            <div class="container">
                <div class="row justify-content-between">
                    <!-- Left Content -->
                    <div class="col-xl-7 col-lg-8">
                        <!-- job single -->
                        <div class="single-job-items mb-50">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="#">
                                        <img src="@Model.JobPosting.Recruiter.CompanyImage" alt="@Model.JobPosting.JobTitle" style="width: 80px; height: 80px;">
                                    </a>
                                </div>
                                <div class="job-tittle">
                                    <a href="#">
                                        <h4>@Model.JobPosting.JobTitle</h4>
                                    </a>
                                    <ul>
                                        <li>@Model.JobPosting.Recruiter.CompanyName</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@Model.JobPosting.Recruiter.Address</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- job single End -->

                        <div class="job-post-details">
                            <div class="post-details1 mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h3>Description</h3>
                                    <h4>@Model.JobPosting.JobDescription</h4>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- Right Content -->
                    <div class="col-xl-4 col-lg-4">
                        <div class="post-details3  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Job Overview</h4>
                            </div>
                            <ul>
                                <li>Posted date : <span>@Model.JobPosting.PostDate</span></li>
                                <li>Location : </li>
                                <li><span>@Model.JobPosting.JobLocation</span></li>
                                <li>Vacancy : <span>@Model.JobPosting.Vacancy</span></li>
                                <li>Job nature : <span>@Model.JobPosting.JobNature.JobNatureName</span></li>
                                <li>Salary :  <span>@Model.JobPosting.Salary</span></li>
                                <li>Expiration date : <span>@Model.JobPosting.ExpirationDate</span></li>
                            </ul>

                            </div>
                        </div>
                        <div class="post-details4  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Company Contact</h4>
                            </div>

                            <ul>
                                <li>Name: <span>@Model.JobPosting.Recruiter.CompanyName </span></li>
                                <li>Phone: <span>@Model.JobPosting.Recruiter.CompanyPhone </span></li>
                                <li>Web : <span> @Model.JobPosting.Recruiter.CompanyWebsite</span></li>
                                <li>Email: <span>@Model.JobPosting.Recruiter.CompanyEmail</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- job post company End -->
        <!-- Applied Job Seekers Section Start -->
        <div class="applied-job-seekers pt-120 pb-120">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="section-title text-center mb-50">
                            <h3>Applied Job Seekers</h3>
                        </div>
                        <div class="applied-job-seekers-list">
                            @foreach (var jobSeeker in Model.AppliedJobSeekers)
                            {
                                <div class="job-seeker-item d-flex align-items-center p-3 mb-3 border rounded" style="background-color: #f9f9f9;">
                                    <p class="me-4 mb-0"><strong>Name:</strong> @jobSeeker.FirstName @jobSeeker.LastName</p>
                                    <p class="me-4 mb-0"><strong>Email:</strong> @(jobSeeker.User?.Email ?? "No email available")</p>
                                    <p class="me-4 mb-0"><strong>Education:</strong> @jobSeeker.EducationLevel</p>
                                    <p class="me-4 mb-0"><strong>Specialized:</strong> @jobSeeker.Specialized</p>
                                    <p class="mb-0"><strong>Experience:</strong> @jobSeeker.Experience</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>



    <!-- JS here -->
    <!-- All JS Custom Plugins Link Here here -->

    <script src="./assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
    <script src="./assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="./assets/js/popper.min.js"></script>
    <script src="./assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="./assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script src="./assets/js/owl.carousel.min.js"></script>
    <script src="./assets/js/slick.min.js"></script>
    <script src="./assets/js/price_rangs.js"></script>

    <!-- One Page, Animated-HeadLin -->
    <script src="./assets/js/wow.min.js"></script>
    <script src="./assets/js/animated.headline.js"></script>
    <script src="./assets/js/jquery.magnific-popup.js"></script>

    <!-- Scrollup, nice-select, sticky -->
    <script src="./assets/js/jquery.scrollUp.min.js"></script>
    <script src="./assets/js/jquery.nice-select.min.js"></script>
    <script src="./assets/js/jquery.sticky.js"></script>

    <!-- contact js -->
    <script src="./assets/js/contact.js"></script>
    <script src="./assets/js/jquery.form.js"></script>
    <script src="./assets/js/jquery.validate.min.js"></script>
    <script src="./assets/js/mail-script.js"></script>
    <script src="./assets/js/jquery.ajaxchimp.min.js"></script>

    <!-- Jquery Plugins, main Jquery -->
    <script src="./assets/js/plugins.js"></script>
    <script src="./assets/js/main.js"></script>
</body>
</html>