@page
@model JobFinder.Areas.Identity.Pages.Admin.ManageUser.DetailsModel
@{
    Layout = "~/Areas/Identity/Pages/Admin/Shared/_AdminLayout.cshtml";
}
<div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
    <span class="mask  bg-gradient-primary  opacity-6"></span>
</div>
<div class="card card-body mx-3 mx-md-4 mt-n6">
    <div class="row gx-4 mb-2">
        <div class="col-auto">
        </div>
        <div class="col-auto my-auto">
            <div class="h-100">
                <h5 class="mb-1">
                    @Model.AppUser.UserName
                </h5>
                <p class="mb-0 font-weight-normal text-sm">
                    @foreach (var role in Model.Roles)
                    {
                        <span>@role</span>
                    }
                </p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="col-12 col-xl-4">
                <div class="card card-plain h-100">
                    <div class="card-header pb-0 p-3">
                        <h6 class="mb-0">Account</h6>
                        <hr class="horizontal gray-light my-3">
                        <ul class="list-group">
                            <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                                <strong class="text-dark">Email:</strong> @Model.AppUser.Email @if (Model.AppUser.EmailConfirmed)
                                {
                                    <i class='bx bx-check'></i>
                                }
                                else
                                {
                                    <i class='bx bx-x'></i>
                                }
                            </li>
                            <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Mobile:</strong> @Model.AppUser.PhoneNumber</li>
                            <li class="list-group-item border-0 ps-0 text-sm">
                                <strong class="text-dark">Status:</strong>
                                @if (@Model.AppUser.ProfileStatus == 1)
                                {
                                    <span class="badge badge-sm bg-gradient-secondary">Banned</span>
                                }
                                else
                                {
                                    <span class="badge badge-sm bg-gradient-success">Active</span>
                                }
                            </li>
                        </ul>
                        <hr class="horizontal gray-light my-2">
                        <div>
                        <a asp-page="./BanUnban" asp-route-id="@Model.AppUser.Id" class="btn btn-outline-primary btn-sm mb-0" data-toggle="tooltip" data-original-title="Edit user">
                            @(@Model.AppUser.ProfileStatus == 1 ? "Unban" : "Ban")
                        </a>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.HasJobSeeker || Model.HasRecruiter)
            {
                @if (Model.HasJobSeeker)
                {
                    <div class="col-12 col-xl-4">
                        <div class="card card-plain h-100">
                            <div class="card-header pb-0 p-3">
                                <div class="row">
                                    <div class="col-md-8 d-flex align-items-center">
                                        <h6 class="mb-0">Job Seeker Profile</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-3">
                                <hr class="horizontal gray-light my-1">
                                <ul class="list-group">
                                    <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Full Name:</strong> @Model.JobSeeker.FirstName @Model.JobSeeker.LastName</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Birthday:</strong> @Model.JobSeeker.Birthday</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Address:</strong> @Model.JobSeeker.Birthday</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Education Level:</strong> @Model.JobSeeker.EducationLevel</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Specialized:</strong> @Model.JobSeeker.Specialized</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Experience:</strong> @Model.JobSeeker.Experience year</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Register Date:</strong> @Model.JobSeeker.RegisterDate</li>
                                </ul>
                            </div>  
                        </div>
                    </div>
                }
                @if (Model.HasRecruiter)
                {
                    <div class="col-12 col-xl-4">
                        <div class="card card-plain h-100">
                            <div class="card-header pb-0 p-4">
                                <div class="row">
                                    <div class="col-md-8 d-flex align-items-center">
                                        <h6 class="mb-0">Recruiter Profile</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-3">
                                <hr class="horizontal gray-light my-1">
                                <ul class="list-group">
                                    <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Company Name:</strong> @Model.Recruiter.CompanyName</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Company Description:</strong> @Model.Recruiter.CompanyDescription</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Company Website:</strong> <a href="@Model.Recruiter.CompanyWebsite" target="_blank"> @Model.Recruiter.CompanyWebsite</a></li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Company Phone:</strong> @Model.Recruiter.CompanyPhone</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Company Email:</strong> @Model.Recruiter.CompanyEmail</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Register Date:</strong> @Model.Recruiter.RegisterDate</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Address:</strong> @Model.Recruiter.Address</li>
                                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Staff Size:</strong> @Model.Recruiter.StaffSize</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 col-xl-4">
                    <div class="card card-plain h-100">
                        <div class="card-header pb-0 p-3">
                            <div class="row">
                                <div class="col-md-8 d-flex align-items-center">
                                    <h6 class="mb-0">Profile Information</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <p class="text-sm">
                                No Job Seeker or Recruiter profile found.
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>