﻿@using JobFinder.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Administrator"))
        {
            <div class="header-btn d-none f-right d-lg-block ml-auto">
                <div class="dropdown">
                    <!-- Thay đổi biểu tượng thành nút dropdown -->
                    <a href="#" class="btn btn-secondary dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin Menu <!-- Văn bản thay thế cho icon -->
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li class="dropdown-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Admin/ManageUser/Index">Manage Users</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li class="dropdown-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
             </div>
        }
        else if (User.IsInRole("Users"))
        {
            <div class="header-btn d-none f-right d-lg-block ml-auto">
                <div class="dropdown">
                    <!-- Thay đổi biểu tượng thành nút dropdown -->
                    <a href="#" class="btn btn-secondary dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        User Menu <!-- Văn bản thay thế cho icon -->
                    </a>

                    <!-- Menu dropdown -->
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <!-- Hiển thị tên người dùng -->
                        <li class="dropdown-item">
                            Hello, @UserManager.GetUserName(User)
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <!-- Nút chỉnh sửa hồ sơ -->
                        <li class="dropdown-item">
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Edit Profile</a>
                        </li>
                        <!-- Nút đăng xuất -->
                        <li class="dropdown-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        }


        else if (User.IsInRole("Recruiter"))
        {
            <div class="header-btn d-none f-right d-lg-block ml-auto">
                <div class="dropdown">
                    <a href="#" class="btn btn-secondary dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Recruiter Menu
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li class="dropdown-item">
                            Company : @UserManager.GetUserName(User)
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li class="dropdown-item">
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Edit Profile</a>
                        </li>
                        <li class="dropdown-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>


        }
    }
    else
    {
        <div class="header-btn d-none f-right d-lg-block ml-auto">
            <a class="btn head-btn1" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn head-btn2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</ul>